<h1>Result developers</h1>
<%if @dev%>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Email</th>
      <th scope="col">Programming Languages</th>
      <th scope="col">Languages</th>
    </tr>
  </thead>
  <% @dev.each do |developer| %>
  <tbody>
    <tr>
      <th scope="row"><%= developer.id %></th>
      <td><%= developer.email %></td>
      <td>
        <% all_pro_lan = developer.programming_languages.map do |lan| %>
        <% lan.name %>
        <% end %>
        <%= all_pro_lan.join(", ") %>
      </td>
      <td>
        <% all_lan = developer.languages.map do |lan| %>
        <% lan.code %>
        <% end %>
        <%= all_lan.join(", ") %>
      </td>
    </tr>
  </tbody>
    <% end %>
</table>
<%else%>
<h1> No result</h1>
<%end%>

<%= link_to "Back to search page", search_path, class: "d-grid gap-2 d-md-block" %>